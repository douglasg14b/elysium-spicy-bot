{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "tsx",
            "type": "node",
            "request": "launch",
            // Debug current file in VSCode
            "program": "${file}",
            /*
            Path to tsx binary
            Assuming locally installed
            */
            "runtimeExecutable": "tsx",
            /*
            Environment variables
            */
            "env": {
                "TSX": "true"
            },
            /*
            Open terminal when debugging starts (Optional)
            Useful to see console.logs
            */
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**"
            ]
        },
        {
            "name": "Run Bot (Dev)",
            "type": "node",
            "request": "launch",
            // Run src/bot.ts with development environment
            "program": "${workspaceFolder}/src/bot.ts",
            /*
            Path to tsx binary for TypeScript execution
            */
            "runtimeExecutable": "tsx",
            /*
            Environment variables (matching dev command)
            */
            "env": {
                "TSX": "true"
            },
            /*
            Load environment variables from .env.local file
            This mimics the dotenvx behavior from the dev command
            */
            "envFile": "${workspaceFolder}/.env.local",
            /*
            Open terminal when debugging starts
            Useful to see console.logs and bot output
            */
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**"
            ]
        }
    ]
}
